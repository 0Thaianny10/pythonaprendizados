#conversão de números
numero_decimal ="6.3"
numero_inteiro = int(float(numero_decimal))
print(numero_inteiro)

#número com casas decimais
numero_str ="5.6"
numero_float = float(numero_str)
print(numero_float)

#converte valor para texto
numero =123
numero_str = str(numero)
print(numero_str)


